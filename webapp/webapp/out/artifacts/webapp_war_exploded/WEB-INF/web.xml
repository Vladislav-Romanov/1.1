<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Login servlet -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>app.Controller.Login</servlet-class>
    </servlet>>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- list servlet -->
    <servlet>
        <servlet-name>read</servlet-name>
        <servlet-class>app.Controller.Read</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>read</servlet-name>
        <url-pattern>/read</url-pattern>
    </servlet-mapping>

    <!-- insert servlet -->
    <servlet>
        <servlet-name>insert</servlet-name>
        <servlet-class>app.Controller.Insert</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>insert</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <!-- delete servlet -->
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>app.Controller.Delete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <!-- update servlet -->
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>app.Controller.Update</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

</web-app>